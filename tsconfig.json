{
  "compilerOptions": {
    "target": "ES2021",            // versão do JS que será gerada
    "module": "CommonJS",          // sistema de módulos
    "rootDir": "src",              // onde estão os arquivos TS
    "outDir": "dist",              // onde o JS compilado vai
    "strict": true,                // ativa verificações mais rígidas
    "esModuleInterop": true,       // compatibilidade com import/export
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
